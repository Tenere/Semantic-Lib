<Window x:Class="WpfRibbonApplication1.SemanticLibEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SemanticLibEdit" Height="300" Width="300">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<avalonEdit:TextEditor
			xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
			Grid.Row="0"
			Grid.Column="0"
			Name="textEditor"
			FontFamily="Consolas"
			SyntaxHighlighting="C#"
			FontSize="10pt"/>
		<TextBox
			Grid.Row="1"
			Grid.Column="0"
			Name="txtErrors"/>
		<StackPanel
			Margin="3"
			Grid.Row="0"
			Grid.RowSpan="2"
			Grid.Column="1">
			<Button
				Padding="5"
				HorizontalAlignment="Center"
				Click="Button_Click">Compile</Button>
		</StackPanel>
		<StatusBar Name="statusBar" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
			<Label Name="statusTextBox"></Label>
		</StatusBar>
	</Grid>
</Window>
